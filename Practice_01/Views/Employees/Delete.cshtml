@model Practice_01.Models.Employee
@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-12">
        <h3>Are you want to sure delete</h3>
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(x => x.EmployeeId)

            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.EmployeeName, new { @class = "col-form-label col-2" })
                <div class="col-6">
                    @Html.DisplayFor(x => x.EmployeeName)
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.JoinDate, new { @class = "col-form-label col-2" })
                <div class="col-6">
                    @Html.DisplayFor(x => x.JoinDate)
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Department, new { @class = "col-form-label col-2" })
                <div class="col-6">
                    @Html.DisplayFor(x => x.Department)
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Salary, new { @class = "col-form-label col-2" })
                <div class="col-6">
                    @Html.DisplayFor(x => x.Salary)
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.IsContinue, new { @class = "col-form-label col-2" })
                <div class="col-6">
                    @Html.DisplayFor(x => x.IsContinue)
                </div>
            </div>
            <div class="form-group row mb-1">
                <div class="col-6 offset-2">
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                </div>
            </div>
        }
    </div>
    <div class="col-12">
        @Html.ActionLink("Back to list", "Index")
    </div>
</div>

